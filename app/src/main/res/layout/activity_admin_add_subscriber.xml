<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bg"
            tools:context=".Admin_Add_Subscriber_Activity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

        <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="@string/app_name"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

        <androidx.cardview.widget.CardView
                android:id="@+id/cv_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <TextView
                        android:text="Enter MISDN*: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_msisdn"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_msisdn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter MSISDN"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:text="Enter ICCID*: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_iccid"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_iccid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter ICCID"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:inputType="number"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:text="Choose Charging Type: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"/>

                <Spinner
                        android:id="@+id/spinner_chargingtype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:drawSelectorOnTop="true"
                        android:layout_marginTop="5dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_chargingType"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_chargingtype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Charging Type"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:text="Choose Sim Profile ID: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"/>

                <Spinner
                        android:id="@+id/spinner_ProfileID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:drawSelectorOnTop="true"
                        android:layout_marginTop="5dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_profileID"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_profileID"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Profile ID"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:text="Choose Service Type: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"/>

                <Spinner
                        android:id="@+id/spinner_servicetype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:drawSelectorOnTop="true"
                        android:layout_marginTop="5dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_servicetype"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_servicetype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Service Type"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:focusable="false"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:text="Enter MVNO Name: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_mvno"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_mvno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter MVNO"
                            android:maxLines="1"
                            android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:text="Enter Tarif Code: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_tarif_code"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_tarif_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Tarif Code"
                            android:maxLines="1"
                            android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:text="Enter TAC: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_tac"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_tac"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter TAC"
                            android:maxLines="1"
                            android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:text="Enter Brand: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_brand"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_brand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Brand"
                            android:maxLines="1"
                            android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                        android:text="Enter Model: "
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="sans-serif"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_model"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_text_model"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter Model"
                            android:maxLines="1"
                            android:singleLine="true"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                        android:id="@+id/btn_add_update_subscriber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/projectbuttons"
                        android:text="Add"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_marginTop="15dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
